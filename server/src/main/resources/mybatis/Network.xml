<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "mybatis-3-mapper.dtd" >
<mapper namespace="cn.batchfile.stat.server.dao.NetworkDao" >

	<insert id="insertNetwork" parameterType="Network">
		REPLACE INTO `network`
		(`agent_id`,`address`,`name`,`hwaddr`,`type`,`description`,`destination`,`broadcast`,`netmask`,`flags`,`mtu`,`metric`) 
		VALUES 
		(#{agentId},#{address},#{name},#{hwaddr},#{type},#{description},#{destination},#{broadcast},#{netmask},#{flags},#{mtu},#{metric})
	</insert>
	
	<insert id="insertData" parameterType="NetworkData">
		REPLACE INTO `network_data`
		(`agent_id`,`address`,`time`,`rx_bytes`,`rx_bytes_per_second`,`rx_packets`,`rx_packets_per_second`,
		`rx_errors`,`rx_errors_per_second`,`rx_dropped`,`rx_dropped_per_second`,`rx_overruns`,`rx_overruns_per_second`,
		`rx_frame`,`rx_frame_per_second`,`tx_bytes`,`tx_bytes_per_second`,`tx_packets`,`tx_packets_per_second`,
		`tx_errors`,`tx_errors_per_second`,`tx_dropped`,`tx_dropped_per_second`,`tx_overruns`,`tx_overruns_per_second`,
		`tx_collisions`,`tx_carrier`,`tx_carrier_per_second`,`speed`)
		VALUES
		(#{agentId},#{address},#{time},#{rxBytes},#{rxBytesPerSecond},#{rxPackets},#{rxPacketsPerSecond},
		#{rxErrors},#{rxErrorsPerSecond},#{rxDropped},#{rxDroppedPerSecond},#{rxOverruns},#{rxOverrunsPerSecond},
		#{rxFrame},#{rxFramePerSecond},#{txBytes},#{txBytesPerSecond},#{txPackets},#{txPacketsPerSecond},
		#{txErrors},#{txErrorsPerSecond},#{txDropped},#{txDroppedPerSecond},#{txOverruns},#{txOverrunsPerSecond},
		#{txCollisions},#{txCarrier},#{txCarrierPerSecond},#{speed})
	</insert>
	
</mapper>